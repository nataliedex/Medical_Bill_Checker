<%- include('partials/header') -%>

<div class="container my-5">
  <div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4">Upload Your Medical Bill</h2>
      <form action="/api/upload" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="billFile" class="form-label">Choose a file to upload</label>
          <input
            type="file"
            name="billFile"
            id="billFile"
            class="form-control"
            accept=".pdf,.jpg,.jpeg,.png,.txt"
            required
          />
          <div class="form-text">
            Supported formats: PDF, JPG, PNG, TXT
          </div>
        </div>
        <div class="d-flex justify-content-between">
          <a href="/" class="btn btn-secondary">Back to Search</a>
          <button type="submit" class="btn btn-primary">Upload & Analyze</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>